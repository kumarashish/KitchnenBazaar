<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:background="@drawable/alert_bg"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <common.DetailsCustomTextView

            android:id="@+id/heading"
            android:layout_centerVertical="true"
            android:text="Address Details  "
            android:textColor="@color/black_color"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/close"
            android:layout_centerVertical="true"
            android:background="@drawable/close_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </RelativeLayout>

    <LinearLayout
        android:visibility="visible"
        android:orientation="vertical"
        android:id="@+id/singleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14dp"
            android:id="@+id/address_name"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="14dp"
            android:id="@+id/address"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:hint="Flat no,Street name "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="14dp"
            android:id="@+id/addressline2"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:hint="District,City,State,pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <common.DetailsCustomTextView
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:text="Delivery Date"
            android:textColor="@color/black_color"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <Button
            android:textSize="14dp"
            android:id="@+id/date"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:hint="Click to select date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <common.DetailsCustomTextView
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:text="Delivery Slot  "
            android:textColor="@color/black_color"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <Button
                android:background="@drawable/rect"
                android:id="@+id/slot1"
                android:textSize="10dp"
                android:layout_weight="1"
                android:text="9 am - 12 pm"
                android:layout_width="0dp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/slot2"
                android:textSize="10dp"
                android:layout_weight="1"
                android:text="12 pm - 3 pm"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:background="@drawable/rect"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/slot3"
                android:textSize="10dp"
                android:layout_weight="1"
                android:text="3 pm - 6 pm"
                android:background="@drawable/rect"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/slot4"
                android:textSize="10dp"
                android:layout_weight="1"
                android:text="6 pm to 12 pm"
                android:background="@drawable/rect"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
        <Button
            android:layout_gravity="center"
            android:id="@+id/submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:background="@drawable/purple_button"
            android:text="Submit"
            android:layout_width="120dp"
            android:layout_height="35dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

    </LinearLayout>


</LinearLayout>
